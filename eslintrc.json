{
  "env": {
    "browser": true,
    "meteor": true,
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": false
    },
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": [2, "unix"],
    "quotes": [2, "single"],
    "semi": [2, "never"],
    "brace-style": [2, "1tbs"],
    "array-bracket-spacing": [2, "never"],
    "camelcase": [2, {
      "properties": "always"
    }],
    "keyword-spacing": [2],
    "eol-last": [2],
    "no-trailing-spaces": [2],
    "curly": ["error", "all"]
  },
  "globals": {}
}
