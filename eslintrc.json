{
  "env": {
    "browser": true,
    "es6": true,
    "jasmine": true,
    "phantomjs": true
  },
  "globals": {
    "$compile": true,
    "$controller": true,
    "$filter": true,
    "$httpBackend": true,
    "$location": true,
    "$q": true,
    "$rootScope": true,
    "$state": true,
    "$window": true,
    "angular": true,
    "bard": true,
    "expectToHaveBeenCalledWith": true,
    "hasFieldGrp": true,
    "itAsync": true,
    "module": true,
    "sinon": true
  },
  "extends": [
    "eslint:recommended",
    "angular"
  ],
  "rules": {
    "indent": [
      "error",
      2, {
        "SwitchCase": 1,
        "flatTernaryExpressions": true
      }
    ],
    "quotes": [
      "error",
      "single",
      "avoid-escape"
    ]
  }
}
