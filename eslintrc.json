{
  "env": {
    "browser": true,
    "meteor": true,
    "node": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "brace-style": ["error", "1tbs"],
    "array-bracket-spacing": ["error", "never"],
    "camelcase": [
      2,
      {
        "properties": "always"
      }
    ],
    "keyword-spacing": ["error"],
    "eol-last": ["error"],
    "no-trailing-spaces": ["error"],
    "curly": ["error", "all"]
  },
  "globals": {},
  "plugins": [
    "react"
  ]
}
